//===----------------------------------------------------------------------===//
// This describes the calling conventions for LAIN architecture.
//===----------------------------------------------------------------------===//

//===----------------------------------------------------------------------===//
// LAIN Return Value Calling Convention
//===----------------------------------------------------------------------===//
def RetCC_LAIN : CallingConv<[
  // i32 return values
  CCIfType<[i32, i64], CCAssignToReg<[R0, R1, R2, R3]>>,

  // Integer values get stored in stack slots that are 4 bytes in
  // size and 4-byte aligned.
  CCIfType<[i64], CCAssignToStack<8, 4>>,
  CCIfType<[i32], CCAssignToStack<4, 4>>
]>;

//===----------------------------------------------------------------------===//
// LAIN Argument Calling Conventions
//===----------------------------------------------------------------------===//
def CC_LAIN : CallingConv<[
  // Promote i8/i16 arguments to i32.
  CCIfType<[i8, i16], CCPromoteToType<i32>>,

  // The first 4 integer arguments are passed in integer registers.
  CCIfType<[i32, i64], CCAssignToReg<[R0, R1, R2, R3]>>,

  // Integer values get stored in stack slots that are 4 bytes in
  // size and 4-byte aligned.
  CCIfType<[i64], CCAssignToStack<8, 4>>,
  CCIfType<[i32], CCAssignToStack<4, 4>>
]>;

def CSR_LAIN : CalleeSavedRegs<(add R4, R5, R6, R7)>;